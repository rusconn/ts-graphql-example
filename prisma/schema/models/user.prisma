model User {
  id        String   @id @pg.Uuid
  name      String   @pg.VarChar(100)
  email     String   @unique @pg.VarChar(100)
  role      UserRole
  updatedAt DateTime

  todos      Todo[]
  token      UserToken?
  credential UserCredential? // 本当は必須だが Prisma の制限によりオプショナルにしている

  @@index([updatedAt, id])
}

enum UserRole {
  ADMIN
  USER
}
