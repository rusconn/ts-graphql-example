model Todo {
  id          String     @id @pg.Uuid
  title       String     @pg.VarChar(255)
  description String
  status      TodoStatus
  userId      String     @pg.Uuid
  updatedAt   DateTime

  user User @relation(fields: userId, references: id, onDelete: Cascade)

  // status 等検索条件の絞り込みはフィルターで十分か
  @@index([userId, id])
  @@index([userId, updatedAt, id])
}

enum TodoStatus {
  DONE
  PENDING
}
