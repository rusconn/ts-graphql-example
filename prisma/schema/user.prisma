model User {
  id        String   @id @pg.Uuid
  updatedAt DateTime
  name      String   @pg.VarChar(100)
  email     String   @unique @pg.VarChar(100)
  password  String   @pg.Char(60)
  token     String?  @unique @pg.Uuid
  role      UserRole @default(USER)
  todos     Todo[]

  @@index([updatedAt, id])
}

enum UserRole {
  ADMIN
  USER
}
