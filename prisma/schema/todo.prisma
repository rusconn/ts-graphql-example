model Todo {
  id          String     @id @pg.Char(26)
  createdAt   DateTime
  updatedAt   DateTime
  title       String     @pg.VarChar(255)
  description String     @default("")
  status      TodoStatus @default(PENDING)
  user        User       @relation(fields: userId, references: id, onDelete: Cascade)
  userId      String     @pg.Char(26)

  @@index(userId)
  @@index(createdAt)
  @@index(updatedAt)
}

enum TodoStatus {
  DONE
  PENDING
}
