{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,
    "sourceMap": true, // これが無いと開発サーバーのスタックトレースがずれる
    "target": "ES2021",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "tests/*": ["tests/*"]
    },
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error"
  }
}
