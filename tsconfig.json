{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,
    "target": "ES2021",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "tests/*": ["tests/*"]
    },
    "types": ["vite/client"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error"
  }
}
